<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.interoberlin.lymbo">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".controller.LymbosController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.interoberlin.mate.lib.view.LogActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="de.interoberlin.mate.lib.view.AboutActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light"></activity>
        <activity
            android:name=".view.activities.LymbosActivity"
            android:label="@string/app_name"
            android:parentActivityName="de.interoberlin.lymbo.SplashActivity"></activity>
        <activity
            android:name=".view.activities.CardsActivity"
            android:label="@string/app_name"
            android:parentActivityName="de.interoberlin.lymbo.SplashActivity"></activity>
    </application>

</manifest>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activities.CardsActivity"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.interoberlin.swipelistview.view.SwipeListView xmlns:swipe="http://schemas.android.com/apk/res-auto"
                android:id="@+id/slv"
                android:listSelector="#00000000"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@color/background"
                swipe:swipeFrontView="@+id/surface"
                swipe:swipeBackView="@+id/reveal"
                swipe:swipeAnimationTime="0"
                swipe:swipeOffsetLeft="0dp"
                swipe:swipeOffsetRight="0dp" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/toolbar_wrapper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <FrameLayout
                android:id="@+id/shadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar"
                android:foreground="@drawable/bottom_shadow" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
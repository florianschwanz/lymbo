<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:theme="@style/Theme.AppCompat.Light.Dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dialog_fragment_padding">

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:hint="@string/title" />
        </LinearLayout>

        <!-- Front -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dialog_fragment_padding">

            <TextView
                android:id="@+id/tvFront"
                style="@style/CardText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/divider_caption_margin_bottom"
                android:layout_marginTop="@dimen/divider_caption_margin_top"
                android:layout_weight="0.50"
                android:ellipsize="end"
                android:text="@string/front" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/stroke" />

            <EditText
                android:id="@+id/etFront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/bottom_shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dialogPrimaryDark"
                android:orientation="vertical"
                android:padding="@dimen/dialog_fragment_padding">

                <TableLayout
                    android:id="@+id/tblTextFront"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivAddTextFront"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_add_black_48dp"
                    android:contentDescription="@string/desc_image" />
            </LinearLayout>
        </LinearLayout>

        <!-- Back -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dialog_fragment_padding">

            <TextView
                android:id="@+id/tvBack"
                style="@style/CardText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/divider_caption_margin_bottom"
                android:layout_marginTop="@dimen/divider_caption_margin_top"
                android:layout_weight="0.50"
                android:ellipsize="end"
                android:text="@string/back" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/stroke" />

            <EditText
                android:id="@+id/etBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialogPrimaryDark"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/bottom_shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dialog_fragment_padding">

                <TableLayout
                    android:id="@+id/tblTextBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivAddTextBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_add_black_48dp"
                    android:contentDescription="@string/desc_image" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tags -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dialog_fragment_padding">

            <TextView
                android:id="@+id/tvTags"
                style="@style/CardText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/divider_caption_margin_bottom"
                android:layout_marginTop="@dimen/divider_caption_margin_top"
                android:layout_weight="0.50"
                android:ellipsize="end"
                android:text="@string/tags" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/stroke" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialogPrimaryDark"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/bottom_shadow" />

            <LinearLayout
                android:id="@+id/llTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dialog_fragment_padding">

                <TableLayout
                    android:id="@+id/tblTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivAddTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_add_black_48dp"
                    android:contentDescription="@string/desc_image" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
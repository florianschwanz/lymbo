<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:theme="@style/Theme.AppCompat.Light.Dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Front -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dialog_fragment_padding">

            <EditText
                android:id="@+id/etFront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:hint="@string/front">

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/ivExpandTextsFront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:contentDescription="@string/desc_image"
                android:src="@drawable/ic_action_expand" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTextFront"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialogPrimaryDark"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/bottom_shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dialog_fragment_padding">

                <TableLayout
                    android:id="@+id/tblTextFront"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivAddTextFront"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_new"
                    android:contentDescription="@string/desc_image" />
            </LinearLayout>
        </LinearLayout>

        <!-- Back -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dialog_fragment_padding">

            <ImageView
                android:id="@+id/ivTranslate"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/desc_image"
                android:src="@drawable/ic_action_import_export" />

            <EditText
                android:id="@+id/etBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="@string/back" />

            <ImageView
                android:id="@+id/ivExpandTextsBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:contentDescription="@string/desc_image"
                android:src="@drawable/ic_action_expand" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTextBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialogPrimaryDark"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/bottom_shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dialog_fragment_padding">

                <TableLayout
                    android:id="@+id/tblTextBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivAddTextBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_new" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tags -->

        <LinearLayout
            android:id="@+id/llAddTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dialog_fragment_padding">

            <ImageView
                android:id="@+id/ivLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc_image"
                android:paddingEnd="@dimen/stack_bar_padding"
                android:paddingStart="@dimen/stack_bar_padding"
                android:src="@drawable/ic_action_labels_dark" />

            <TextView
                android:id="@+id/tvExpandTags"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:text="@string/add_tags"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialogPrimaryDark"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/bottom_shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dialog_fragment_padding">

                <TableLayout
                    android:id="@+id/tblTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivAddTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_new"
                    android:contentDescription="@string/desc_image" />
            </LinearLayout>
        </LinearLayout>

        <!-- Templates -->

        <LinearLayout
            android:id="@+id/llUseTemplate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dialog_fragment_padding">

            <ImageView
                android:id="@+id/ivTemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc_image"
                android:paddingEnd="@dimen/stack_bar_padding"
                android:paddingStart="@dimen/stack_bar_padding"
                android:src="@drawable/ic_action_view_as_list" />

            <TextView
                android:id="@+id/tvExpandTemplates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:text="@string/use_template"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTemplates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialogPrimaryDark"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/bottom_shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dialog_fragment_padding">

                <TableLayout
                    android:id="@+id/tblTemplates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:attr/dividerHorizontal"
                    android:showDividers="middle" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:padding="@dimen/dialog_fragment_padding"
    android:theme="@style/Theme.AppCompat.Light.Dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Front -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etFront"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:hint="@string/front">

                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/ivExpandTextsFront"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:contentDescription="@string/desc_image"
                    android:src="@drawable/ic_action_expand" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTextFront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/tblTextFront"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivAddTextFront"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_new"
                    android:contentDescription="@string/desc_image" />
            </LinearLayout>

            <!-- Back -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivTranslate"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/desc_image"
                    android:src="@drawable/ic_action_import_export" />

                <EditText
                    android:id="@+id/etBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:hint="@string/back" />

                <ImageView
                    android:id="@+id/ivExpandTextsBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:contentDescription="@string/desc_image"
                    android:src="@drawable/ic_action_expand" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTextBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/tblTextBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivAddTextBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_new" />
            </LinearLayout>
        </LinearLayout>

        <!-- Expand -->

        <LinearLayout
            android:id="@+id/llAddTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dialog_fragment_padding"
            android:paddingRight="@dimen/dialog_fragment_padding"
            android:paddingTop="@dimen/dialog_fragment_padding">

            <ImageView
                android:id="@+id/ivLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc_image"
                android:paddingEnd="@dimen/stack_bar_padding"
                android:paddingStart="@dimen/stack_bar_padding"
                android:src="@drawable/ic_action_labels_dark" />

            <TextView
                android:id="@+id/tvExpandTags"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:text="@string/add_tags"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tblTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ivAddTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_new"
                android:contentDescription="@string/desc_image" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
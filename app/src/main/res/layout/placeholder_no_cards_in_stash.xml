<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/card_reveal_margin"
    android:paddingRight="@dimen/card_reveal_margin"
    android:paddingTop="@dimen/toolbar_height"
    android:weightSum="1">

    <!-- Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <de.interoberlin.lymbo.view.controls.RobotoTextView
            android:id="@+id/tvTitle"
            style="@style/CardTitle"
            android:layout_width="288dp"
            android:layout_height="0dp"
            android:layout_weight="0.50"
            android:gravity="center_horizontal"
            android:text="@string/no_cards_in_stash"
            roboto:typeface="roboto_regular" />
    </LinearLayout>
</LinearLayout>